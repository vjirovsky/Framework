{ifset $availableLocales}
	%li.nav-header JazykovÃ¡ verze
	{foreach $availableLocales as $key => $value}
		<li n:class='$locale == $key ? active'>
			<a n:href='setLocale!, locale => $key'>
				{if $key == 'cs'}
					{var $icon ='cz'}

				{elseif $key == 'en'}
					{var $icon = 'gb'}

				{else}
					{var $icon = $key}
				{/}
				<i class="flag-icon flag-icon-{$icon}"></i>
				{$value}
			</a>
		</li>
	{/}
{/}
