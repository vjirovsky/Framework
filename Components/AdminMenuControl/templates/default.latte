{if isset($items) && count($items) >= 2}
	<li n:class="submenu, $presenter->module == $module ? 'active open'">
		<a href="#">
			<i n:class="fa, $icon"></i>
			%span {$title}
			%i.arrow.fa.fa-chevron-right
		</a>
		%ul
			{foreach $items as $item}
				{var $link = ":" . ucfirst($module) . ":" . $item->link}
				<li n:class="topmenu, $presenter->isLinkCurrent($link) ? 'active'">
					<a n:phref=":$module:$item->link, id => NULL">
						%span {$item->label}
					</a>
				</li>
			{/}

{else}
	<li n:class="topmenu, $presenter->module == $module ? 'active'">
		<a n:phref=":$module:Homepage:default, id => NULL">
			<i n:class="fa, isset($icon) ? $icon"></i>
			{$title}
		</a>
	</li>
{/}
